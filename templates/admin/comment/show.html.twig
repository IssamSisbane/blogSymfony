{% extends 'admin/baseAdmin.html.twig' %}

{% block title %} modification du commentaire {{comment.id}} {% endblock %}

{% block body %}
    <div class="container">
        <h1><p>Id du commentaire </p></h1>
        <a class="btn btn-outline-warning" href="{{ path('comment.edit',{id : comment.id }) }}" >modifier</a>
        <a class="btn btn-outline-danger" href="{{ path('comment.remove',{id : comment.id }) }}" >supprimer</a>
        <p>auteur : {{ comment.username }}</p>
        <p>contenu : {{ comment.content|raw }}</p>
        <p>validité : {{ comment.valid }}<p>
        <p>Date de création : {{ comment.createdAt|date('d/m/Y à h\\hi') }}</p>
        {% if comment.valid == 0%}
            <a class="btn btn-outline-primary" href="{{ path('comment.valider',{id : comment.id }) }}">Valider le commentaire</a>
        {% endif %}
    </div>
{% endblock %}
