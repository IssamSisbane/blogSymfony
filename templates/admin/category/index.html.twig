{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
    <div class="container">
    
        <a class="btn btn-outline-primary" href="{{ path('category.create') }}" >Ajouter</a>
        {% for category in categories %}
        <div class = "row">
            <div class = "col-2">
            <h2><a href="{{ path('category.edit',{id : category.id }) }}"> {{ category.name }}</a></h2>
            </div>
            <div class = "col-1">
            <a class="btn btn-outline-danger" href="{{ path('category.remove',{id : category.id }) }}" >supprimer</a>
            </div>
        </div>
        {% endfor %}
        {{ knp_pagination_render(categories,'@KnpPaginator/Pagination/twitter_bootstrap_v3_pagination.html.twig') }}
    </div>
{% endblock %}

